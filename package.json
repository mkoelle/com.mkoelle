{
  "name": "com.mkoelle",
  "version": "1.0.0",
  "description": "Base project for mkoelle.com",
  "main": "index.js",
  "scripts": {
    "start": "npm-run-all -p dev-*",
    "build": "npm-run-all -s build-*",
    "clean": "rimraf _site",
    "clean-all": "rimraf _site node_modules package-lock.json",
    "dev-11ty": "eleventy --serve",
    "dev-css": "tailwindcss -i src/assets/css/tailwind.css -o _site/assets/css/tailwind.css --watch --postcss",
    "build-11ty": "eleventy",
    "build-css": "tailwindcss -i src/assets/css/tailwind.css -o _site/assets/css/tailwind.css --postcss",
    "deps": "ncu",
    "deps-update": "ncu -u"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mkoelle/com.mkoelle.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mkoelle/com.mkoelle/issues"
  },
  "homepage": "https://github.com/mkoelle/com.mkoelle#readme",
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@11ty/eleventy-navigation": "^0.3.5",
    "autoprefixer": "^10.4.14",
    "npm-check-updates": "^16.10.7",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.21",
    "rimraf": "^5.0.0",
    "tailwindcss": "^3.3.1"
  }
}
